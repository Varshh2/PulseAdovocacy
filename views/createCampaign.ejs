<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/custom.css">
    <title>Subscribed Users</title>
</head>

<body>
    <div id="background"></div>
    <section id="main">

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid nav-box">
                <a class="navbar-brand" href="/dashboard">
                    Pulse <span class="highlight">A</span>dvocacy
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="fa-solid fa-bars fa-lg"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/campaigns">Campaigns</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/legislativeBills">Legislative Bills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/subscribedUsers">Subscribed Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Middle Container -->
        <section id="middle-section" class="createCampMail-section">
            <div class="createCamp-container">
                <div class="heading-box d-flex justify-content-center align-items-center py-4">
                    <h3 class="text-white m-0">Create Campaign</h3>
                </div>

                <div class="createCamp-mail">
                    <form action="/legislativeBills/sendEmail" method="POST">

                        <!-- Hidden input field for billId -->
                        <input type="hidden" id="billId" name="billId" value="<%= billId %>">

                        <!-- To -->
                        <div class="form-group createCamp-mail-grp">
                            <input type="text" id="to" name="to" class="border-input" placeholder="Recipient email(s)"
                                required value="<%= userEmails.join(', ') %>" readonly>
                        </div>

                        <!-- Subject -->
                        <div class="form-group createCamp-mail-grp">
                            <input type="text" id="subject" name="subject" class="border-input"
                                placeholder="Email subject" required value="<%= subject %>" readonly>
                        </div>

                        <!-- Email Body -->
                        <div class="form-group createCamp-mail-grp">
                            <textarea id="contentTemplate" name="contentTemplate" class="border-input w-100 h-100"
                                rows="10" required><%= emailTemplate %></textarea>
                        </div>

                        <!-- <div class="form-group createCamp-mail-grp">
                            <textarea id="contentTemplate" name="contentTemplate" class="border-input w-100 h-100 " rows="10" required></textarea>
                        </div> -->

                        <!-- Button Container -->
                        <div class="button-container d-flex justify-content-center pb-3">
                            <!-- Submit button -->
                            <input type="submit" value="Send" class="animated-btn w-50 ">
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            &copy; 2024 Pulse Advocacy. All rights reserved.
        </footer>

        <!-- jQuery and Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <!-- CKEditor -->
        <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
</body>

</html>